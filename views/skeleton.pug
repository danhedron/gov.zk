doctype html
html
  head
    block title
      title GOV.ZK
    block css
      link(rel='stylesheet', href='/index.css')
    block js
  body
    if req.user
      script.
        (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
        (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
        m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
        })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

        ga('create', 'UA-20878451-7', 'auto');
        ga('send', 'pageview');
        ga('set', 'userId', #{req.user});
    header
      .header
        .grid-row
          .column-two-thirds.font-large
            block header
              a.logo(href='/') &#9819; gov.zk
          .columns-one-third
            block login
            //-
              if req && req.user
                div.login
                 span Hello, #{req.user}&nbsp;
                 a(href='/log-out') (Log out)
              else
                a.button.login(href='/log-in') Log in
    #content
      block banner
        .accent-bar
        include banner.pug
      block breadcrumbs
        .breadcrumbs
          ol
            li
              a(href="/") Home
            block breadcrumb
      block content
    footer
      .footer
        block footer
          .grid-row
            p.column-two-thirds
            p.column-one-third.center
              a(href='/about-this-website') About this website
