doctype html
html
  head
    block title
      title GOV.ZK
    block css
      link(rel='stylesheet', href='/index.css')
    block js
  body
    header
      .header
        .grid-row
          .column-two-thirds.font-large
            block header
              a.logo(href='/') &#9819; gov.zk
          .columns-one-third
            block login
              if req && req.user
                div.login
                 span Hello, #{req.user}&nbsp;
                 a(href='/log-out') (Log out)
              else
                a.button.login(href='/log-in') Log in
    #content
      block banner
        .accent-bar
        include banner.pug
      block breadcrumbs
        .breadcrumbs
          ol
            li
              a(href="/") Home
            block breadcrumb
      block content
    footer
      .footer
        block footer
          .grid-row
            p.column-two-thirds
            p.column-one-third.center
              a(href='/about-this-website') About this website
